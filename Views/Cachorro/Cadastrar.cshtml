@model CachorroCadastrarViewModel

@{
    ViewData["Title"] = "Cadastro de cão";
}

<div class="cadastro">
    <h2 class="pb-5 text-center">Cadastre o seu cachorro</h2>
    <div class="form-cadastro">
        <form method="post" asp-action="Cadastrar" enctype="multipart/form-data">

            @if (ViewData["success"] != null)
            {
                <div class="alert alert-success mb-4">@ViewData["success"]</div>
            }
            @if (ViewData["error"] != null)
            {
                <div class="alert alert-danger mb-4">@ViewData["error"]</div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome:</label>
                        <input asp-for="Nome" type="text" class="form-control" /> 
                        <span asp-validation-for="Nome" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Idade" class="control-label">Idade:</label>
                        <input asp-for="Idade" type="text" class="form-control" /> 
                        <span asp-validation-for="Idade" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row justify-content-between">
                <div class="col-md-7">
                    <div class="form-group">
                        <label asp-for="Raca" class="control-label">Raça:</label>
                        <input asp-for="Raca" type="text" class="form-control" /> 
                        <span asp-validation-for="Raca" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Porte" class="control-label">Porte:</label>
                        <input asp-for="Porte" type="text" class="form-control" /> 
                        <span asp-validation-for="Porte" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Sexo" class="control-label">Sexo:</label>
                        <input asp-for="Sexo" type="text" class="form-control" /> 
                        <span asp-validation-for="Sexo" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Foto" class="control-label">Foto:</label>
                        <div class="custom-file">
                            <input asp-for="Foto" class="custom-file-input" id="customFile" />  
                            <label class="custom-file-label" for="customFile">Procurar Arquivo</label>
                        </div>
                        <span asp-validation-for="Foto" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label">Descrição:</label>
                        <textarea asp-for="Descricao" type="text" rows="4" class="form-control" style="resize: none;"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>
            
            <div class="text-center">
                <input type="submit" class="btn btn-primary w-50 mt-4" value="Enviar" />
            </div>

        </form>
    </div>
</div>

@section scripts{  
    <script type="text/javascript">  
        $(".custom-file-input").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>  
}