@model LoginViewModel

@{
    ViewData["Title"] = "Login de passeador";
}

<div class="d-flex flex-column align-items-center">
    <div class="pb-5">
        <span>Deseja entrar como usuário?</span>
        <a asp-controller="Usuario" asp-action="Entrar">Clique aqui.</a>
    </div>
   
    <h2 class="pb-4">Entre em sua conta</h2>

    <form method="post" asp-action="Entrar">

        @if (ViewData["error"] != null)
        {
            <div class="alert alert-danger mb-4">@ViewData["error"]</div>
        }

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Login" class="control-label">Login:</label>
                    <input asp-for="Login" type="text" class="form-control" placeholder="" /> 
                    <span asp-validation-for="Login" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label asp-for="Senha" class="control-label">Senha:</label>
                    <input asp-for="Senha" type="password" class="form-control" placeholder="" /> 
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>
            </div>
        </div>

        <div class="text-center">
            <input type="submit" class="btn btn-primary w-100 mt-4" value="Entrar" />
        </div>
        
        <div class="text-center">
            <h3 class="pt-5">Não tem uma conta?</h3>
            <a class="btn btn-secondary mt-2" asp-controller="Passeador" asp-action="Cadastrar">Cadastrar novo passeador</a>
        </div>

    </form>
</div>
