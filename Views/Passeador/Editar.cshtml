@model PasseadorEditarViewModel

@{
    ViewData["Title"] = "Edição de passeador";
}

<div class="cadastro">
    <h2 class="pb-5 text-center">Edite os seus dados</h2>
    <div class="form-cadastro">
        <form method="post" asp-action="Editar" enctype="multipart/form-data">

            @if (ViewData["error"] != null)
            {
                <div class="alert alert-danger mb-4">@ViewData["error"]</div>
            }

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label">Nome:</label>
                        <input asp-for="Nome" type="text" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Nome" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Nascimento" class="control-label">Data de nascimento:</label>
                        <input asp-for="Nascimento" type="date" class="form-control" /> 
                        <span asp-validation-for="Nascimento" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Senha" class="control-label">Senha:</label>
                        <input asp-for="Senha" type="password" class="form-control" /> 
                        <span asp-validation-for="Senha" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">E-mail:</label>
                        <input asp-for="Email" type="email" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Email" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="Telefone" class="control-label">Telefone:</label>
                        <input asp-for="Telefone" type="tel" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Telefone" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>


            <div class="row">
                <div class="col-md-9">
                    <div class="form-group">
                        <label asp-for="Endereco" class="control-label">Endereço:</label>
                        <input asp-for="Endereco" type="text" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Endereco" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Cep" class="control-label">CEP:</label>
                        <input asp-for="Cep" type="text" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Cep" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row justify-content-between">
                <div class="col-md-7">
                    <div class="form-group">
                        <label asp-for="Cidade" class="control-label">Cidade:</label>
                        <input asp-for="Cidade" type="text" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Cidade" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="form-group">
                        <label asp-for="Estado" class="control-label">Estado:</label>
                        <input asp-for="Estado" type="text" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Estado" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row justify-content-between">
                <div class="col-md-5">
                    <div class="form-group">
                        <label asp-for="Horario" class="control-label">Horário de passeio:</label>
                        <input asp-for="Horario" type="time" class="form-control" placeholder="" /> 
                        <span asp-validation-for="Horario" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="form-group">
                        <label asp-for="DistanciaMaxima" class="control-label">Distância máxima:</label>
                        <div class="d-flex flex-row align-items-center">
                            <input asp-for="DistanciaMaxima" type="text" class="form-control" />
                            <span class="ml-2 text-black-50">km</span>
                        </div>
                        <span asp-validation-for="DistanciaMaxima" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label">Descrição:</label>
                        <textarea asp-for="Descricao" type="text" rows="4" class="form-control" style="resize: none;"></textarea>
                        <span asp-validation-for="Descricao" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Qualificacoes" class="control-label">Qualificações:</label>
                        <textarea asp-for="Qualificacoes" type="text" rows="4" class="form-control" style="resize: none;"></textarea>
                        <span asp-validation-for="Qualificacoes" class="text-danger text-nowrap"></span>
                    </div>
                </div>

                <div class="col-md-12">
                    <div class="form-group">
                        <label asp-for="Foto" class="control-label">Foto:</label>
                        <div class="custom-file">
                            <input asp-for="Foto" class="custom-file-input" id="customFile" />  
                            <label class="custom-file-label" for="customFile">Procurar Arquivo</label>
                        </div>
                        <span asp-validation-for="Foto" class="text-danger text-nowrap"></span>
                    </div>
                </div>
            </div>

            <input asp-for="Id" type="hidden" />
            <input asp-for="Login" type="hidden" />
            <input asp-for="SenhaSalva" type="hidden" />
            <input asp-for="FotoSalva" type="hidden" />

            <div class="text-center">
                <input type="submit" class="btn btn-primary w-50 mt-4" value="Salvar" />
            </div>

        </form>
    </div>
</div>

@section scripts{  
    <script type="text/javascript">  
        $(".custom-file-input").on("change", function () {  
            var fileName = $(this).val().split("\\").pop();  
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);  
        });  
    </script>  
}